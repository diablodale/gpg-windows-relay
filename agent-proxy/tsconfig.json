{
	"compilerOptions": {
		"module": "Node16",
		"target": "ES2022",
		"outDir": "out",
		"rootDir": "src",
		"lib": [
			"ES2022"
		],
		"sourceMap": true,
		"skipLibCheck": true,
		"strict": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "out"],
	"references": [
		{ "path": "../shared/tsconfig.json" }
	]
}
