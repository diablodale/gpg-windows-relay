{
  "name": "gpg-agent-proxy",
  "displayName": "GPG Agent Proxy",
  "description": "Windows agent proxy component for GPG relay",
  "version": "0.0.1",
  "publisher": "local",
  "repository": {
    "type": "git",
    "url": "https://github.com/diablodale/gpg-windows-relay"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "os": [
    "win32"
  ],
  "extensionKind": [
    "ui"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gpg-agent-proxy.start",
        "title": "GPG Agent Proxy: Start"
      },
      {
        "command": "gpg-agent-proxy.stop",
        "title": "GPG Agent Proxy: Stop"
      },
      {
        "command": "gpg-agent-proxy.restart",
        "title": "GPG Agent Proxy: Restart"
      },
      {
        "command": "gpg-agent-proxy.showStatus",
        "title": "GPG Agent Proxy: Show Status"
      }
    ],
    "configuration": {
      "title": "GPG Agent Proxy",
      "properties": {
        "gpgAgentProxy.gpg4winPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to Gpg4win's GnuPG bin directory containing `gpgconf.exe`. Leave empty to auto-detect.",
          "scope": "resource"
        },
        "gpgAgentProxy.debugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc --build",
    "watch": "tsc --build --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "dependencies": {
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.19.9",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "chai": "^4.5.0",
    "eslint": "^9.39.2",
    "glob": "^13.0.1",
    "mocha": "^10.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
