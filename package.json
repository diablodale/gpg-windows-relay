{
  "name": "gpg-agent-relay",
  "displayName": "GPG Agent Relay",
  "description": "Relays GPG agent protocol to Windows host running Gpg4win",
  "version": "0.0.1",
  "publisher": "local",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "extensionKind": [
    "ui"
  ],
  "os": [
    "win32"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gpg-agent-relay.start",
        "title": "GPG Relay: Start"
      },
      {
        "command": "gpg-agent-relay.stop",
        "title": "GPG Relay: Stop"
      },
      {
        "command": "gpg-agent-relay.restart",
        "title": "GPG Relay: Restart"
      },
      {
        "command": "gpg-agent-relay.showStatus",
        "title": "GPG Relay: Show Status"
      }
    ],
    "configuration": {
      "title": "GPG Agent Relay",
      "properties": {
        "gpgRelay.gpg4winPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to Gpg4win's GnuPG bin directory containing `gpgconf.exe`. Leave empty to auto-detect.",
          "scope": "resource"
        },
        "gpgRelay.npiperelayPath": {
          "type": "string",
          "default": "",
          "markdownDescription": "Path to `npiperelay.exe` (albertony fork with Assuan support). Leave empty to auto-detect.",
          "scope": "resource"
        },
        "gpgRelay.autoStart": {
          "type": "boolean",
          "default": false,
          "description": "Automatically start relay when remote connection is detected"
        },
        "gpgRelay.debugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
