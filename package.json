{
  "name": "gpg-windows-relay-monorepo",
  "description": "GPG Windows Relay - Three extension pack for relaying GPG to Windows from remotes",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "compile": "npm run compile:agent && npm run compile:request",
    "compile:agent": "cd agent-proxy && npm run compile",
    "compile:request": "cd request-proxy && npm run compile",
    "watch": "npm run watch:agent & npm run watch:request",
    "watch:agent": "cd agent-proxy && npm run watch",
    "watch:request": "cd request-proxy && npm run watch",
    "package": "npm run package:agent && npm run package:request && npm run package:pack",
    "package:agent": "cd agent-proxy && npm run package",
    "package:request": "cd request-proxy && npm run package",
    "package:pack": "cd pack && npm run package",
    "test": "mocha --ui bdd shared/**/__tests__/**/*.test.js",
    "test:watch": "mocha --ui bdd shared/**/__tests__/**/*.test.js --watch",
    "clean": "rimraf -g \"agent-proxy/out\" \"request-proxy/out\" \"agent-proxy/gpg-agent-proxy-*.vsix\" \"request-proxy/gpg-request-proxy-*.vsix\" \"pack/gpg-windows-relay-*.vsix\" \"shared/out\" \"shared/**/*.d.ts\" \"shared/**/*.d.ts.map\""
  },
  "devDependencies": {
    "rimraf": "^5.0.0",
    "mocha": "^10.5.0",
    "@types/mocha": "^10.0.10"
  },
  "dependencies": {
    "@types/node": "^25.2.1",
    "typescript": "^5.9.3"
  }
}
