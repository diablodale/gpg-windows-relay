{
  "name": "gpg-request-proxy",
  "displayName": "GPG Request Proxy",
  "description": "Remote request proxy component for GPG relay",
  "version": "0.0.1",
  "publisher": "local",
  "repository": {
    "type": "git",
    "url": "https://github.com/diablodale/gpg-windows-relay"
  },
  "engines": {
    "vscode": "^1.108.1"
  },
  "extensionKind": [
    "workspace"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gpg-request-proxy.start",
        "title": "GPG Request Proxy: Start"
      },
      {
        "command": "gpg-request-proxy.stop",
        "title": "GPG Request Proxy: Stop"
      }
    ],
    "configuration": {
      "title": "GPG Request Proxy",
      "properties": {
        "gpgRequestProxy.debugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc --build",
    "watch": "tsc --build --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "chai": "^4.5.0",
    "eslint": "^9.39.2",
    "glob": "^13.0.1",
    "mocha": "^10.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
