{
  "name": "@gpg-relay/shared",
  "version": "1.0.0",
  "description": "Shared code for GPG relay extensions",
  "main": "out/index.js",
  "types": "out/index.d.ts",
  "files": [
    "out"
  ],
  "exports": {
    ".": {
      "types": "./out/index.d.ts",
      "default": "./out/index.js"
    },
    "./test": {
      "types": "./out/test/helpers.d.ts",
      "default": "./out/test/helpers.js"
    }
  },
  "scripts": {
    "compile": "tsc --build",
    "watch": "tsc --build --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "mocha --ui bdd out/test/**/*.test.js"
  },
  "keywords": [
    "gpg",
    "assuan",
    "protocol"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.2.1",
    "chai": "^4.5.0",
    "eslint": "^9.39.2",
    "mocha": "^10.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
