{
  "name": "gpg-bridge-request",
  "displayName": "GPG Bridge Request",
  "description": "Remote request proxy component for GPG Bridge",
  "version": "0.0.1",
  "preview": true,
  "publisher": "local",
  "license": "See LICENSE file",
  "repository": {
    "type": "git",
    "url": "https://github.com/diablodale/gpg-bridge"
  },
  "qna": false,
  "bugs": {
    "url": "https://github.com/diablodale/gpg-bridge/issues"
  },
  "engines": {
    "vscode": "^1.108.1",
    "node": ">=22.21.1"
  },
  "extensionKind": [
    "workspace"
  ],
  "api": "none",
  "extensionDependencies": [
    "local.gpg-bridge-agent"
  ],
  "categories": [
    "Other"
  ],
  "keywords": [
    "gpg",
    "gnupg",
    "proxy",
    "assuan"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gpg-bridge-request.start",
        "title": "GPG Bridge Request: Start"
      },
      {
        "command": "gpg-bridge-request.stop",
        "title": "GPG Bridge Request: Stop"
      }
    ],
    "configuration": {
      "title": "GPG Bridge Request",
      "properties": {
        "gpgBridgeRequest.debugLogging": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug logging for troubleshooting"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc --build",
    "compile:integration": "tsc --build tsconfig.test.json",
    "watch": "tsc --build --watch",
    "pretest": "npm run compile && npm run lint",
    "pretest:integration": "npm run compile:integration && npm run lint:integration",
    "lint": "eslint src",
    "lint:integration": "eslint src",
    "test": "vscode-test",
    "test:integration": "npm run test:integration:request-proxy && npm run test:integration:gpg-cli",
    "test:integration:request-proxy": "node out/test/integration/requestProxyRunTest.js",
    "test:integration:gpg-cli": "node out/test/integration/gpgCliRunTest.js",
    "package": "vsce package"
  },
  "dependencies": {
    "@gpg-bridge/shared": "file:../shared",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "chai": "^4.5.0",
    "eslint": "^9.39.2",
    "glob": "^13.0.1",
    "mocha": "^10.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  }
}
